<html>

<head>
    <title>Dashboard</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Sets the width of the page is the devices widtth-->
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="icon" type="image/x-icon" href="/images/logo/favicon.ico">
    <script src="/scripts/jquery-3.6.0.min.js" defer></script>
    <script src="/scripts/handlers/footer-buttons.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js" defer></script>
    <script src="/scripts/dashboard.js" defer></script>
</head>

<body>
     <!--Header-->
     <header>
      <div id="header-logo-container">
        <img id="header-logo" src="./images/Untitled design (7).png" />
        <div id="co-name">
          Fuel Line&trade;
        </div>
      </div>
      <div id="others">
        <div id="anchor-row">
          <a id="admin-route" href="/admin_user_views">Admin</a>
          <a href="/privacy">Privacy Policy</a>
          <a href="/contact">Contact</a>
        </div>
    
      </div>
    </header>
  
    <!--Main-->
    <main id="dashboard-page">
        <div id="user-profile-x">
            <div id="user-profile-y">
                <div id="user-div">
                    <!--User Profile Box-->
                    <div id="picture-div-x">
                        <canvas id="chart">
                        </canvas>
                    </div>
                    <div id="info-div">
                        <div class="info-title" id="name">
                            <span id="username"></span>
                        </div>
                        <div class="info-items" id="barContainer">
                            <span id="amount-spent"></span>
                        </div>
                        <div class="info-items" id="barContainer">
                            <span id="trip-average"></span>
                        </div>
                        <div class="info-items" id="barContainer">
                            <span id="distance-driven"></span>
                        </div>
                        <div id="extra-div">
                            <div id="select-x">
                                <select class="input-buttons" id="time-period">
                                    <option value="" selected disabled hidden>Time Period</option>
                                    <option value="day">Daily</option>
                                    <option value="month">Monthly</option>
                                    <option value="year">Yearly</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>
    <footer>
        <div id="navigation-buttons">
          <!--Home Button-->
          <div class="nav-buttons">
            <div class="top-bar">
            </div>
            <div class="hover-button" id="home-button">
              <div class="button-img">
                <img src="./images/buttons/house-logo.png" />
              </div>
              <div class="button-title">
                <p>Home</p>
              </div>
            </div>
          </div>
        <!--Map Button-->
        <div class="nav-buttons" id="map-button" >
          <div class="top-bar">
          </div>
          <div class="hover-button">
            <div class="button-img">
              <img src="./images/buttons/map.png" />
            </div>
            <div class="button-title">
              <p>Map</p>
            </div>
          </div>
        </div>
          <!--User Button-->
          <div class="nav-buttons" id="profile-button">
            <div class="top-bar">
            </div>
            <div class="hover-button">
              <div class="button-img">
                <img src="./images/buttons/user-button.png" />
              </div>
              <div class="button-title">
                <p>Profile</p>
              </div>
            </div>
          </div>
             <!--Favorites Button-->
             <div class="nav-buttons" id="logout-button">
              <div class="top-bar">
              </div>
              <div class="hover-button">
                <div class="button-img">
                  <img src="./images/buttons/logout.png" />
                </div>
                <div class="button-title">
                  <p>Logout</p>
                </div>
              </div>
            </div>
        </div>
      </footer>

    <!--END OF BODY-->
</body>

</html>
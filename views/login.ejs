<!DOCTYPE html>

<head>
  <title>Login</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!--Sets the width of the page is the devices widtth-->
  <link rel="stylesheet" href="./styles/main.css" />
  <link rel="icon" type="image/x-icon" href="/images/logo/favicon.ico">
  <script src="/scripts/jquery-3.6.0.min.js"></script>
  <script src="/scripts/login.js" defer></script>
  <script src="/scripts/handlers/footer-buttons.js"></script>
</head>

<body>
    <!--Header-->
    <header>
      <div id="header-logo-container">
        <img id="header-logo" src="./images/Untitled design (7).png" />
        <div id="co-name">
          Fuel Line&trade;
        </div>
      </div>
    
      <div id="others">
        <div id="anchor-row">
          <a href="/privacy">Privacy Policy</a>
          <a href="/contact">Contact</a>
        </div>
     
      </div>
    </header>
  
  <!--Main-->
  <main id="login-page">
    <div id="statement">
      Login To Your Fuel Line <br />Account
    </div>
    <div id="greet-container">
      <div id="greet">
        Please Enter Your Information Below
      </div>
    </div>
    <div id="form">
      <div id="user-container">
        <input class="input-fields" placeholder="username" id="username_log" />
      </div>
      <div id="pass-container">
        <input class="input-fields" type="password" placeholder="password" id="password_log" />
      </div>
      <div id="check-boxes">
        <div id="show-pass">
          <div>
            <input value="show-pass-box" type="checkbox" id="show-pass-box" />
          </div>
          <label id="pass-label">Show Password</label>
        </div>
      </div>
      <div id="buttons">
        <div id="submit">
          <button id="submit-button">Login</button>
        </div>
        <div id="back">
          <button id="back-button">Back</button>
        </div>
      </div>
    </div>
  </main>
 <!--Footer-->
 <footer>
  <div id="navigation-buttons">
    <!--Home Button-->
    <div class="nav-buttons">
      <div class="top-bar">
      </div>
      <div class="hover-button" id="home-button">
        <div class="button-img">
          <img src="./images/buttons/house-logo.png" />
        </div>
        <div class="button-title">
          <p>Home</p>
        </div>
      </div>
    </div>
  <!--Map Button-->
  <div class="nav-buttons" id="map-button" >
    <div class="top-bar">
    </div>
    <div class="hover-button">
      <div class="button-img">
        <img src="./images/buttons/map.png" />
      </div>
      <div class="button-title">
        <p>Map</p>
      </div>
    </div>
  </div>
    <!--User Button-->
    <div class="nav-buttons" id="profile-button">
      <div class="top-bar">
      </div>
      <div class="hover-button">
        <div class="button-img">
          <img src="./images/buttons/user-button.png" />
        </div>
        <div class="button-title">
          <p>Profile</p>
        </div>
      </div>
    </div>
       <!--Favorites Button-->
       <div class="nav-buttons">
        <div class="top-bar">
        </div>
        <div class="hover-button">
          <div class="button-img">
            <img src="./images/buttons/logout.png" />
          </div>
          <div class="button-title">
            <p>Logout</p>
          </div>
        </div>
      </div>
  </div>
</footer>

  <!--END OF BODY-->
</body>

</html>
<!DOCTYPE html>
<head>
  <title>Map</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="icon" type="image/x-icon" href="/images/logo/favicon.ico">
  <script src="https://polyfill.io/v3/polyfill.min.js?features=default" defer></script>
  <script> var exports = {}; </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAaPEZLb5oDvPK1VpROTSFBpi0cRoF8b9c&callback=initMap&libraries=places&v=weekly"> </script>
  <script src="/scripts/jquery-3.6.0.min.js" defer></script>
  <script src="/scripts/handlers/footer-buttons.js" defer></script>
  <script type="module" src="/scripts/basicmap.js" defer ></script>

  <style>
    .controls {
      margin-top: 10px;
      border: 1px solid transparent;
      border-radius: 2px 0 0 2px;
      box-sizing: border-box;
      -moz-box-sizing: border-box;
      height: 32px;
      outline: none;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }

    #origin-input {
      background-color: #fff;
      font-family: Roboto;
      font-size: 15px;
      font-weight: 300;
      margin-left: 1%;
      padding: 0 11px 0 13px;
      text-overflow: ellipsis;
      width: 190px;
    }

    #destination-input {
      background-color: #fff;
      font-family: Roboto;
      font-size: 15px;
      font-weight: 300;
      margin-left: 1%;
      padding: 0 11px 0 13px;
      text-overflow: ellipsis;
      width: 190px;
      position: absolute;
      right: 0px;
      

    }
    #input-locations {
      display: flex;
      justify-content: space-between;
    }

    .arrow {
      border: solid black;
      border-width: 0 4px 4px 0;
      display: inline-block;
      padding: 3px;
    }

  .right {
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
  }

  .left {
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
  }

    #origin-input:focus,
    #destination-input:focus {
      border-color: #4d90fe;
    }

    a[href^="http://maps.google.com/maps"]{display:none !important} 
    a[href^="https://maps.google.com/maps"]{display:none !important}

     .gmnoprint a, .gmnoprint span, .gm-style-cc {
        display:none;
    } 
  </style>
</head>

<body>
     <!--Header-->
     <header>
      <div id="header-logo-container">
        <img id="header-logo" src="./images/Untitled design (7).png" />
        <div id="co-name">
          Fuel Line&trade;
        </div>
      </div>
      <div id="others">
        <div id="anchor-row">
          <a id="admin-route" href="/admin_user_views">Admin</a>
          <a href="/privacy">Privacy Policy</a>
          <a href="/contact">Contact</a>
        </div>
      </div>
    </header>
  
  <!--Main-->
  <main id="map-page">

    <div id="map-interaction-elements">
      <div id="input-locations">
      <input id="origin-input" class="controls" type="text" placeholder="Origin" />

      <input id="destination-input" class="controls" type="text" placeholder="Destination" />
    </div>

    <div id="prev-route-div">
      <i class="arrow left"></i>
      <button class="change-route-button" id="prev-route">Previous Route</button>
    </div>
    <div id="next-route-div">
      <button class="change-route-button" id="next-route">Next Route</button>
      <i class="arrow right"></i>
    </div>
      
    </div>

    <div id="map-x-axis">
      <div id="map-y-axis">
        <div id="map-section">
          <!--Actual Map Rendering-->



        </div>


      </div>
    </div>
    <div id="info">
      <div class="map-info">
        <div id="operators">
          <div id="calculation-form">

            <div>

            </div>
         
            <div>
              
              <input type="text" name="" id="gas-price" placeholder="Cost of Gas ($/L):"/><br />
            </div>
            <div>
              <input type="button" value="calculate" id="calculate" class="button"/>
  
            </div>
            <div id="result"></div>
  
          </div>
        </div>
      </div>
    </div>


  </main>
  <!--Footer-->
  <footer>
    <div id="navigation-buttons">
      <!--Home Button-->
      <div class="nav-buttons">
        <div class="top-bar">
        </div>
        <div class="hover-button" id="home-button">
          <div class="button-img">
            <img src="./images/buttons/house-logo.png" />
          </div>
          <div class="button-title">
            <p>Home</p>
          </div>
        </div>
      </div>
    <!--Map Button-->
    <div class="nav-buttons" id="map-button" >
      <div class="top-bar">
      </div>
      <div class="hover-button">
        <div class="button-img">
          <img src="./images/buttons/map.png" />
        </div>
        <div class="button-title">
          <p>Map</p>
        </div>
      </div>
    </div>
      <!--User Button-->
      <div class="nav-buttons" id="profile-button">
        <div class="top-bar">
        </div>
        <div class="hover-button">
          <div class="button-img">
            <img src="./images/buttons/user-button.png" />
          </div>
          <div class="button-title">
            <p>Profile</p>
          </div>
        </div>
      </div>
         <!--Favorites Button-->
         <div class="nav-buttons" id="logout-button">
          <div class="top-bar">
          </div>
          <div class="hover-button">
            <div class="button-img">
              <img src="./images/buttons/logout.png" />
            </div>
            <div class="button-title">
              <p>Logout</p>
            </div>
          </div>
        </div>
    </div>
  </footer>
</body>

</html>

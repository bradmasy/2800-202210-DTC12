<html>

<head>
  <title></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--Sets the width of the page is the devices widtth-->
  <link rel="stylesheet" href="/styles/main.css">
  <script src="/scripts/jquery-3.6.0.min.js" defer></script>
  <!-- <script src="./scripts/index.js" defer></script> -->
  <script src="/scripts/validations.js" defer></script>
  <script src="/scripts/signup.js" defer></script>
  <script src="/scripts/handlers/footer-buttons.js" defer></script>

</head>

<body>
     <!--Header-->
     <header>
      <div id="header-logo-container">
        <img id="header-logo" src="./images/Untitled design (7).png" />
        <div id="co-name">
          Fuel Line&trade;
        </div>
      </div>
    
      <div id="others">
        <div id="anchor-row">
          <a href="/privacy">Privacy Policy</a>
          <a href="/contact">Contact</a>
        </div>
     
      </div>
    </header>
  

  <!--Main-->
  <main id="signup-page">
    <div id="signup-statement">
      Create Your Fuel Line <br>Account
    </div>
    <div id="greet">
      <div>
        Please Enter Your Information Below...
      </div>
      <div>
        <span>* indicates all fields are mandatory</span>
      </div>
    </div>

    <div id="signup-form">
      <div id="signup-form-align">
        <div class="input-buttons">
          <input class="input-fields" placeholder="Username*" id="username">
        </div>
        <div class="input-buttons">
          <input class="input-fields" id="email" placeholder="Email Address*">
        </div>
        <div class="input-buttons">
          <input id="password1" class="input-fields" placeholder="Password*" type="password">
        </div>
        <div class="input-buttons">
          <input id="password2" class="input-fields" placeholder="Confirm Password*" type="password">
        </div>

        <form id="profile-pic-form" method="POST" action="/profile-upload-single" enctype="multipart/form-data">
          <div id="form-div" style="text-align: center">
            <button id="choose-button">Choose Profile Picture</button>
            <input id="profile-picture" type="file" name="profile-file" required />
          </div>
          <div id="submission"style="text-align: center">
            <input id="input-submit" type="submit" value="Upload">
          </div>
        </form>

        <div class="input-buttons">
          <div id="show-me">
            <div id="center">
              <div class="container-div">
                <div id="show-pass">
                  <div>
                    <div>
                      <label id="pass-title">Show Password</label>
                      <input id="show" type="checkbox" value="show">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="input-buttons">
          <div id="confirm">
            <div>
              <button id="back-button">Back</button>
            </div>
            <div>
              <button id="confirm-button">Confirm</button>
            </div>
          </div>
        </div>
      </div>
    </div>


    <!--POPUP-->
    <div class="error">
      <div class="error-container">

        <div class="error-title">
          <div class="title">
            Error
          </div>
          <button data-close-button class="close-button">&times;</button>
        </div>

        <div class="error-content">
          Your password does not meet our requirements.
          <br><br>
          REQUIREMENTS HERE
          <br><br>
          Please try again.
        </div>

      </div>
    </div>
    <div id="overlay"></div>
  </main>

  <!--Footer-->
  <footer>
    <div id="navigation-buttons">
      <!--Home Button-->
      <div class="nav-buttons">
        <div class="top-bar">
        </div>
        <div class="hover-button" id="home-button">
          <div class="button-img">
            <img src="./images/buttons/house-logo.png" />
          </div>
          <div class="button-title">
            <p>Home</p>
          </div>
        </div>
      </div>
    <!--Map Button-->
    <div class="nav-buttons" id="map-button" >
      <div class="top-bar">
      </div>
      <div class="hover-button">
        <div class="button-img">
          <img src="./images/buttons/map.png" />
        </div>
        <div class="button-title">
          <p>Map</p>
        </div>
      </div>
    </div>
      <!--User Button-->
      <div class="nav-buttons" id="profile-button">
        <div class="top-bar">
        </div>
        <div class="hover-button">
          <div class="button-img">
            <img src="./images/buttons/user-button.png" />
          </div>
          <div class="button-title">
            <p>Profile</p>
          </div>
        </div>
      </div>
         <!--Favorites Button-->
         <div class="nav-buttons">
          <div class="top-bar">
          </div>
          <div class="hover-button">
            <div class="button-img">
              <img src="./images/buttons/logout.png" />
            </div>
            <div class="button-title">
              <p>Logout</p>
            </div>
          </div>
        </div>
    </div>
  </footer>
  <!--END OF BODY-->
</body>

</html>